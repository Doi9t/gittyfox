{
  "description": "Save your bookmarks on Github",
  "manifest_version": 2,
  "name": "Gittyfox",
  "version": "1.0",
  "homepage_url": "https://watier.ca",
  "icons": {
    "48": "icons/main.png"
  },
  "applications": {
    "gecko": {
      "id": "gittyfox@watier.ca"
    }
  },
  "permissions": [
    "bookmarks",
    "activeTab",
    "webNavigation",
    "webRequest",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Gittyfox",
    "default_icon": "icons/main.png",
    "browser_style": true,
    "theme_icons": [
      {
        "light": "icons/main_dark.png",
        "dark": "icons/main.png",
        "size": 32
      }
    ]
  },
  "background": {
    "scripts": [
      "popup/scripts/jquery-3.3.1.min.js",
      "popup/scripts/core.min.js",
      "popup/scripts/md5.min.js",
      "popup/scripts/evpkdf.min.js",
      "popup/scripts/enc-base64.min.js",
      "popup/scripts/cipher-core.min.js",
      "popup/scripts/sha256.min.js",
      "popup/scripts/aes.min.js",
      "popup/scripts/lz-string.min.js",
      "popup/scripts/alertify.min.js",
      "popup/scripts/pickadate/picker.js",
      "popup/scripts/pickadate/picker.date.js",
      "popup/scripts/options.js"
    ]
  }
}
